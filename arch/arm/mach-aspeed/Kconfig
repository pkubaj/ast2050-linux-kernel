config ARCH_AST1070
	bool "AST1070 Comapnion chip combination"

config AST1070_NR
	int "Number of AST1070 Comapniion Chip combination"
	depends on ARCH_AST1070
	default "1"
	help
	  Set this to the number of ast1070

choice
        prompt "Connect Bus Interface"
	depends on ARCH_AST1070
        default CONFIG_AST_LPC_PLUS

config AST_LPC_PLUS
        bool "LPC PLUS"

config AST_LPC
        bool "LPC"

endchoice

